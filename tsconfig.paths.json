{
  "compilerOptions": {
    "paths": {
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],

      "@components": ["src/components"],
      "@components/*": ["src/components/*"],

      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],

      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],

      "@i18n": ["src/i18n"],
      "@i18n/*": ["src/i18n/*"],

      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"],

      "@redux": ["src/redux"],
      "@redux/*": ["src/redux/*"],

      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],

      "@services": ["src/services"],
      "@services/*": ["src/services/*"],

      "@theme": ["src/theme"],
      "@theme/*": ["src/theme/*"],

      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],

      "@logger": ["src/logger"],
      "@logger/*": ["src/logger/*"]
    }
  }
}
